{
  "name": "backend",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "start": "node ./bin/www",
    "dev": "node -r dotenv/config --watch ./bin/www",
    "test": "cross-env NODE_ENV=test vitest run",
    "test:watch": "cross-env NODE_ENV=test vitest",
    "test:coverage": "cross-env NODE_ENV=test vitest run --coverage",
    "db:migrate": "prisma migrate dev",
    "db:generate": "prisma generate",
    "db:studio": "prisma studio",
    "db:seed": "node prisma/seed.js",
    "db:reset": "prisma migrate reset --force",
    "db:push": "npx prisma db push --accept-data-loss --schema=prisma/schema.prisma",
    "api-schema:generate": "node ./scripts/generate-openapi.js",
    "zod:generate": "node ./scripts/generate-zod-from-openapi.js",
    "schemas:generate": "npm run api-schema:generate && npm run zod:generate",
    "all:generate": "npm run db:generate && npm run schemas:generate"
  },
  "dependencies": {
    "@prisma/client": "^6.15.0",
    "bcrypt": "^6.0.0",
    "cookie-parser": "~1.4.4",
    "crypto": "^1.0.1",
    "debug": "~2.6.9",
    "dotenv": "^16.4.5",
    "express": "~4.16.1",
    "http-errors": "~1.6.3",
    "jade": "~1.11.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "~1.9.1",
    "supabase": "^2.39.2",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "zod": "^4.1.4"
  },
  "devDependencies": {
    "@vitest/coverage-v8": "^2.0.5",
    "cross-env": "^7.0.3",
    "nodemon": "^3.1.10",
    "prisma": "^6.15.0",
    "supertest": "^7.0.0",
    "typescript": "^5.6.2",
    "vitest": "^2.0.5"
  }
}
